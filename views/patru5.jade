extends ./index.jade

block vars
    - var title='Aventura 4x4 in 5 zile - Flo Aventure Tours'
    - var description = 'Curs in tehnici de supravietuire pe durata a 5 zile folosind masina de teren. Admiram frumusetile Apusenilor si invatam sa folosim masina 4x4 pe teren accidentat.'
    - var ogtitle= title
    - var ogDescription= description
    - var ogurl = 'http://www.floadventure.ro/4x4-5-zile'
    - var ogimage = "http://www.floadventure.ro/images//aventura-5.png"

block content
    div.bgded.bgded-top(style="background-image:url('/images/aventura-5.png');")
        div.wrapper.dust-white-color
            header#header.clear

                if device.desktop
                    div.main-nav.downspace-40.primary-grey-color.flex-1.clear
                        include components/navigation
                        ul.fl.clear
                            li.fl.language

                                if (lang === 'en')
                                    a(href="/4x4-5-zile/en") en
                                    ul.sl
                                        li.sl
                                            a(href="/4x4-5-zile/ro") ro
                                else
                                    a(href="/4x4-5-zile/ro") ro
                                    ul.sl
                                        li.sl
                                            a(href="/4x4-5-zile/en") en
                else
                    div.mobile-nav.flex-1-5
                        i.fa.fa-bars.fa-2x.upper.show-panel.dark-grey-color
                        nav.sidenav.clear
                            include components/navigation-mobile
                        ul.fl.clear.lang.dark-grey-color
                            li.fl.language

                                if (lang === 'en')
                                    a en
                                    ul.sl
                                        li.sl
                                            a(href="/4x4-5-zile/ro") ro
                                else
                                    a ro
                                    ul.sl
                                        li.sl
                                            a(href="/4x4-5-zile/en") en

                div#logo.text-center.flex-1
                    div.sign(data-device="#{type}", style="background-image:url('/images/logo-flo-adventure.png');")
                    if device.mobile
                        h1.font-3
                            a.dust-grey-color(href="#top", title="Aventura 4x4 in 5 zile") #{i18n.__("patru5.titlu")}
                    else
                        h1.font-4
                            a.dust-grey-color(href="#top", title="Aventura 4x4 in 5 zile") #{i18n.__("patru5.titlu")}
                    h3.dust-grey-color.font-2 Flo Adventure Tours

    div.scroll-down
        div.chevron
        div.chevron
        div.chevron

    div.page-description.wrapper.dust-grey.light-grey-color
        div.container.clear(data-device="#{type}")
            div.page-box.flex-1
                h4.subtile-grey-color.font-montserrat-bold #{i18n.__("patru5.descriere")}
                div.heading-sep.orange
                div.btmspace-50.font-open-sans.dark-grey-color(data-aos="fade-right")
                    p #{i18n.__("patru5.descriere2")}
            div.page-box.flex-1-5
                div.map(style="background-image:url('/images/harta-aventura-5.png')")

    hr.cloudy
    div.image.dust-grey.dark-grey-color
        div.hoc.clear.center.upspace-35.btmspace-30(data-device="#{type}")
            div.desc-item
                i.fa.fa-calendar.font-1-5
                span.item-header #{i18n.__("descriere.perioada")}
                span.item-text #{i18n.__("data.august")}, 2020
            div.desc-item
                i.fa.fa-male.fa-3x.font-1-5
                span.item-header #{i18n.__("descriere.persoane")}
                span.item-text #{i18n.__("descriere.minim")} 2 participanti /curs
            div.desc-item
                i.fa.fa-map-marker.fa-3x.font-1-5
                span.item-header #{i18n.__("descriere.regiune")}
                span.item-text Apuseni
            div.desc-item
                i.fa.fa-car.fa-3x.font-1-5
                span.item-header #{i18n.__("descriere.transport")}
                span.item-text 4x4



    div.little-about.height-600(style="background-image:url('/images/roata.png');background-size:cover;background-position: right center;")

    //detalii si itinerariu
    div.page-description.wrapper.dust-grey.dark-grey-color
        div.container.clear(data-device="#{type}", style="align-items: flex-start;")

            div.page-box.flex-1(style=("#{type}" === 'phone')? "" : "padding-right: 70px;")
                h4.font-montserrat-bold #{i18n.__("descriere.detalii")}
                div.heading-sep.light-grey
                p.font-effra-regular #{i18n.__("patru5.descriere3")}
            div.page-box.flex-1-6
                h4.font-montserrat-bold #{i18n.__("descriere.itinerariu")}
                div.heading-sep.light-grey
                p #{i18n.__("descriere.itinerariu2")}

                h5.left.upspace-15 #{i18n.__("data.ziua1")} - 95 km #{i18n.__("descriere.parcursi")}
                p #{i18n.__("patru5.itinerariu1")}

                h5.left.upspace-15 #{i18n.__("data.ziua2")} - 60 km #{i18n.__("descriere.parcursi")}
                p #{i18n.__("patru5.itinerariu2")}

                p #{i18n.__("patru5.itinerariu3")}

                h5.left.upspace-15 #{i18n.__("data.ziua3")} - 65 km #{i18n.__("descriere.parcursi")}
                p #{i18n.__("patru5.itinerariu4")}

                h5.left #{i18n.__("data.ziua4")} - 25 km #{i18n.__("descriere.parcursi")}
                p #{i18n.__("patru5.itinerariu5")}

                h5.left.upspace-15 #{i18n.__("data.ziua5")}  - 125 km #{i18n.__("descriere.parcursi")}
                p #{i18n.__("patru5.itinerariu6")}

                p #{i18n.__("patru5.itinerariu7")}

    //grid de imagini
    div.page-description.wrapper
        div.container.width-full.max-width-full.padding-0.clear(data-device="#{type}")
            div#full-grid.width-full.dark-grey(data-device="#{type}")
                a.full-grid-item.big
                    div.flex-1(style="background-image:url('/images/aventura-5-grid-1.png'); background-size: cover; background-position: bottom center;")
                a.full-grid-item
                    div.flex-1(style="background-image:url('/images/aventura-5-grid-3.png'); background-size: cover; background-position:top;")

                a.full-grid-item
                    div.flex-1(style="background-image:url('/images/aventura-5-grid-5.png'); background-size: cover; background-position: center;")
                a.full-grid-item
                    div.flex-1(style="background-image:url('/images/aventura-5-grid-7.png'); background-size: cover; background-position: center;")
                a.full-grid-item.half
                    div.flex-1(style="background-image:url('/images/aventura-5-grid-4.png'); background-size: cover; background-position: center;")
                a.full-grid-item.big
                    div.flex-1(style="background-image:url('/images/aventura-5-grid-6.png'); background-size: cover; background-position: right top;")
                a.full-grid-item
                    div.flex-1(style="background-image:url('/images/aventura-5-grid-8-1.png'); background-size: cover; background-position:top;")

    hr.cloudy


    //extra informatii
    div.page-description.wrapper.dark-grey.cloudy-color
        div.container.clear(data-device="#{type}", style="align-items: flex-start;")
            div.page-box.flex-1.font-montserrat-thin(style=("#{type}" === 'phone') ? "" : "padding-right: 20px;")
                h3.font-montserrat-regular #{i18n.__("patru3.q1")}
                div.heading-sep.light-grey
                p.orange-color(style="font-weight: bold;") #{i18n.__("patru3.include")}
                p #{i18n.__("patru3.include1")}

                p.orange-color(style="font-weight: bold;") #{i18n.__("patru3.nuinclude")}
                p #{i18n.__("patru3.nuinclude1")}

                h3.font-montserrat-regular Extra
                div.heading-sep.light-grey
                p #{i18n.__("patru3.extra1")}


            div.page-box.flex-1.font-montserrat-thin
                h3.font-montserrat-regular #{i18n.__("patru3.q2")}
                div.heading-sep.light-grey
                p.orange-color(style="font-weight: bold;") #{i18n.__("patru3.include")}
                p #{i18n.__("patru3.include2")}

                p.orange-color(style="font-weight: bold;") #{i18n.__("patru3.nuinclude")}
                p #{i18n.__("patru3.nuinclude2")}


    //rezervati locul sau contacteaza-ne
    div.little-about.height-500.cloudy(style="background-image:url('/images/price-background.jpg');background-size:cover;background-position: center center;")
        div.hoc.container.clear.font-1-2
            a.button(href="/inscriere/patru5", title="Inscriere") #{i18n.__("descriere.rezerva")}
            a.button(href="/contact", title="Contact") #{i18n.__("descriere.q")}

    hr.cloudy
    div.price-about.height-300.wrapper.dark-grey.light-grey-color.btmspace-50


        p.font-1-2.dust-white-color #{i18n.__("patru3.price1")}
        div.overlay-text.flex-1.font-2.orange-color

            p.font-1-2 450&nbsp;
            p ron
            p.down /#{i18n.__("descriere.persoana")}

        p.font-1-2.dust-white-color #{i18n.__("patru3.price2")}
        div.overlay-text.flex-1.font-2.orange-color

            p.font-1-2 750&nbsp;
            p ron
            p.down /#{i18n.__("descriere.persoana")}
        div(data-href="https://developers.facebook.com/docs/plugins/", data-layout="button-count", data-size="small" data-mobile-iframe="true").fa.fa-2x.fa-share-alt-square.inline.dust-white-color
            a.dust-white-color.font-open-sans.share-button.fb-xfbml-parse-ignore.inline(target="_blank", href="https://www.facebook.com/sharer/sharer.php?u=#{encodeURIComponent(ogurl)}&amp;src=sdkpreparse", title="Share") Share

    div.repeat-ribbon.wrapper.coloured
        div.repeat.dark-grey(style="background-image: url('/images/repeat.png');height: 50px;background-size: contain;")
