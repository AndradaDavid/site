extends ./index.jade

block vars
	- var title='Apuseni in 5 zile - Flo Aventure Tours'
	- var description = 'Drumetie in zonele pitoresti din Apuseni in 5 zile. O zona plina de cultura, istorie si natura salbatica.'
	- var ogtitle= title
	- var ogDescription= description
	- var ogurl = 'http://www.floadventure.ro/apuseni-5-zile'
	- var ogimage = "http://www.floadventure.ro/images/apuseni-5-platou.png"

block content
	div.bgded.bgded-top(style="background-image:url('/images/apuseni-5-platou.png');")
		div.wrapper.dust-white-color
			header#header.clear

				if device.desktop
					div.main-nav.downspace-40.dark-grey-color.flex-1.clear
						include components/navigation
						ul.fl.clear.dust-white-color
							li.fl.language

								if (lang === 'en')
									a(href="apuseni-5-zile/en") en
									ul.sl
										li.sl
											a(href="/apuseni-5-zile/ro") ro
								else
									a(href="/apuseni-5-zile/ro") ro
									ul.sl
										li.sl
											a(href="/apuseni-5-zile/en") en

				else
					div.mobile-nav.flex-1-5
						i.fa.fa-bars.fa-2x.upper.show-panel
						nav.sidenav.clear
							include components/navigation-mobile
						ul.fl.clear.lang.dust-white-color
							li.fl.language

								if (lang === 'en')
									a en
									ul.sl
										li.sl
											a(href="/apuseni-5-zile/ro") ro
								else
									a ro
									ul.sl
										li.sl
											a(href="/apuseni-5-zile/en") en

				div#logo.text-center.flex-4.upspace-35
					div.sign(data-device="#{type}", style="background-image:url('/images/logo-flo-adventure.png');")
					h1.font-4
						a.cloudy-color(href="#top", title="5 zile in Apuseni") #{i18n.__("apuseni5.titlu")}
					h3.cloudy-color.font-2 Flo Adventure Tours


	div.scroll-down
		div.chevron
		div.chevron
		div.chevron

	div.page-description.wrapper.dust-grey.light-grey-color
		div.container.clear(data-device="#{type}")
			div.page-box.flex-1
				h4.subtile-grey-color.font-montserrat-bold #{i18n.__("apuseni5.titlu2")}
				div.heading-sep.orange
				div.btmspace-50.font-open-sans.dark-grey-color(data-aos="fade-right")
					p #{i18n.__("apuseni5.descriere")}
					div(data-href="https://developers.facebook.com/docs/plugins/", data-layout="button-count", data-size="small" data-mobile-iframe="true").fa.fa-2x.fa-share-alt-square.inline.dark-grey-color
						a.dark-grey-color.font-open-sans.share-button.fb-xfbml-parse-ignore.inline(target="_blank", href="https://www.facebook.com/sharer/sharer.php?u=#{encodeURIComponent(ogurl)}&amp;src=sdkpreparse", title="Share") Share

			div.page-box.flex-1-5
				div.map(style="background-image:url('/images/harta-apuseni-5.png')")

	hr.cloudy

	div.image.dark-grey.light-grey-color
		div.hoc.clear.center.upspace-35.btmspace-30(data-device="#{type}")
			div.desc-item
				i.fa.fa-calendar.font-2
				span.item-header #{i18n.__("descriere.perioada")}
				span.item-text #{i18n.__("data.aprilie")}, 2019 - #{i18n.__("data.octombrie")}, 2019
			div.desc-item
				i.fa.fa-male.fa-3x.font-2
				span.item-header #{i18n.__("descriere.persoane")}
				span.item-text #{i18n.__("descriere.minim")} 3
			div.desc-item
				i.fa.fa-map-marker.fa-3x.font-2
				span.item-header #{i18n.__("descriere.regiune")}
				span.item-text Apuseni
			div.desc-item
				i.fa.fa-car.fa-3x.font-2
				span.item-header Transport
				span.item-text #{i18n.__("descriere.masina")}

	div.little-about.height-500(style="background-image:url('/images/apuseni-5-platou-1.png');background-size:cover;background-position: right center;")


	//detalii si itinerariu
	div.page-description.wrapper.dust-grey.dark-grey-color
		div.container.clear(data-device="#{type}", style="align-items: flex-start;")
			div.page-box.flex-1(style=("#{type}" === 'phone') ? "" : "padding-right: 70px;")
				h4.font-montserrat-bold #{i18n.__("descriere.detalii")}
				div.heading-sep.light-grey
				p.font-effra-regular #{i18n.__("apuseni5.detalii1")}
			div.page-box.flex-1-6
				h4.font-montserrat-bold #{i18n.__("descriere.itinerariu")}
				div.heading-sep.light-grey
				p #{i18n.__("descriere.itinerariu2")}

				h5.left.upspace-15 #{i18n.__("data.ziua1")}
				p #{i18n.__("apuseni5.itinerariu1")}

				h5.left.upspace-15 #{i18n.__("data.ziua2")}
				p #{i18n.__("apuseni5.itinerariu2")}

				h5.left.upspace-15 #{i18n.__("data.ziua3")}
				p #{i18n.__("apuseni5.itinerariu3")}

				h5.left.upspace-15 #{i18n.__("data.ziua4")}
				p #{i18n.__("apuseni5.itinerariu4")}

				h5.left.upspace-15 #{i18n.__("data.ziua5")}
				p #{i18n.__("apuseni5.itinerariu5")}



	//grid de imagini
	div.page-description.wrapper
		div.container.width-full.max-width-full.padding-0.clear(data-device="#{type}")
			div#full-grid.width-full.dark-grey(data-device="#{type}")
				a.full-grid-item.big
					div.flex-1(style="background-image:url('/images/apuseni-5-grid-1.png'); background-size: cover; background-position: top;")
				a.full-grid-item
					div.flex-1(style="background-image:url('/images/apuseni-5-grid-2.png'); background-size: cover; background-position:top;")

				a.full-grid-item
					div.flex-1(style="background-image:url('/images/apuseni-5-grid-3.png'); background-size: cover; background-position: center;")
				a.full-grid-item
					div.flex-1(style="background-image:url('/images/aventura-5-grid-5.png'); background-size: cover; background-position: center;")
				a.full-grid-item.half
					div.flex-1(style="background-image:url('/images/apuseni-5-grid-4.png'); background-size: cover; background-position: center;")
				a.full-grid-item.big
					div.flex-1(style="background-image:url('/images/aventura-5-grid-6.png'); background-size: cover; background-position: center center;")
				a.full-grid-item
					div.flex-1(style="background-image:url('/images/aventura-5-grid-7.png'); background-size: cover; background-position: center;")
	hr.cloudy

	//extra informatii
	div.page-description.wrapper.dark-grey.cloudy-color
		div.container.clear(data-device="#{type}", style="align-items: flex-start;")
			div.page-box.flex-1.font-montserrat-thin(style="padding-right: 20px;")
				h4.font-montserrat-regular #{i18n.__("descriere.include")}
				div.heading-sep.light-grey
				span #{i18n.__("apuseni3.include1")}
				span Transport
				span #{i18n.__("apuseni3.include2")}
				span #{i18n.__("apuseni5.include3")}


			div.page-box.flex-1.font-montserrat-thin
				h4.font-montserrat-regular #{i18n.__("descriere.nuinclude")}
				div.heading-sep.light-grey
				span #{i18n.__("apuseni3.nuinclude1")}
				span #{i18n.__("apuseni3.nuinclude2")}

	//rezervati locul sau contacteaza-ne
	div.little-about.height-500.cloudy(style="background-image:url('/images/price-background-1.jpg');background-size:cover;background-position: center center;")
		div.hoc.container.clear.font-1-2
			a.button.orange(href="/inscriere/apuseni5", title="Inscriere") #{i18n.__("descriere.rezerva")}
			a.button(href="/contact", title="Contact") #{i18n.__("descriere.q")}


	hr.cloudy
	div.price-about.height-300.wrapper.dark-grey.orange-color
		p.dust-white-color.font-2(style="top: 80px;") #{i18n.__("descriere.pretul")}
		div.overlay-text.flex-1.font-3.orange-color

			i.fa.fa-euro
			p.font-1-2 350&nbsp;
			p.down /#{i18n.__("descriere.persoana")}
	div.repeat-ribbon.wrapper.coloured
		div.repeat(style="background-image: url('/images/repeat.png');height: 50px;background-size: contain;")
