extends ./index.jade

block content
	div.bgded
		div.wrapper.dark-grey
			header#header.clear

				if device.desktop
					div.main-nav.downspace-40.dust-grey-color.flex-1.clear
						include components/navigation

				else
					div.mobile-nav
						i.fa.fa-bars.fa-2x.upper.show-panel.light-grey-color
						nav.sidenav.clear
							include components/navigation

				div#logo.text-center.flex-1.upspace-200
					h1.font-3
						a.dust-grey-color(href="#top") Planificator
					h3.dust-grey-color.font-1-2 Flo Adventure Tours


	div.page-description.wrapper.dust-white-color.dark-grey
		div.container.clear(data-device="#{type}")
			h3 Februarie

	div.page-description.wrapper.dust-white-color.dark-grey
		div.container.width-full.max-width-full.padding-0.clear.dark-grey(data-device="#{type}", style="align-items:normal;")

			div#full-grid.width-80.height-400(data-device="#{type}")
				a(href="http://www.extremromania.ro/catararegheata.html", title="Catarare pe gheata").full-grid-item.half.planning
					div.flex-1(style="background-image:url('/images/kajhsdf67894.png'); background-size: cover; background-position: bottom center;")
					div.upper-details.dark-grey-color
						div.date.font-1-3 15 - 17 februarie
					div.ribbon-small(style="background-image:url('/images/logo-cursuri.png');")
					div.details.dust-white-color
						div.separator.orange.btmspace-10
						div.title.font-1-5 S1 - Curs initiere catarare pe gheata
						div.price.font-1-2 450 Ron

				a(href="http://www.extremromania.ro/catararegheata.html", title="Catarare pe gheata").full-grid-item.half.planning
