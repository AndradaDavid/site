					div.flex-1(style="background-image:url('/images/everesteli-grid-9.png'); background-size: cover; background-position: center;")
				a(title="Flo Adventure Tours - Everest elicopter").full-grid-item
					div.flex-1(style="background-image:url('/images/everesteli-grid-11.png'); background-size: cover; background-position:top;")

				a(title="Flo Adventure Tours - Everest elicopter").full-grid-item
					div.flex-1(style="background-image:url('/images/everesteli-grid-4.png'); background-size: cover; background-position: center;")
				a(title="Flo Adventure Tours - Everest elicopter").full-grid-item
					div.flex-1(style="background-image:url('/images/everesteli-grid-3.png'); background-size: cover; background-position: center;")
				a(title="Flo Adventure Tours - Everest elicopter").full-grid-item.half
					div.flex-1(style="background-image:url('/images/everesteli-grid-5.png'); background-size: cover; background-position: center;")
				a(title="Flo Adventure Tours - Everest elicopter").full-grid-item.big
					div.flex-1(style="background-image:url('/images/everesteli-grid-1.png'); background-size: cover; background-position: center;")
				a(title="Flo Adventure Tours - Everest elicopter").full-grid-item
					div.flex-1(style="background-image:url('/images/everesteli-grid-10.png'); background-size: cover; background-position: center;")

