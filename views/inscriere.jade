extends ./index.jade

block content

	div.bgded

		div.wrapper.dark-grey
			header#header.clear

				if device.desktop
					div.main-nav.downspace-40.dust-grey-color.flex-1.clear
						include components/navigation

				else
					div.mobile-nav
						i.fa.fa-bars.fa-2x.upper.show-panel.light-grey-color
						nav.sidenav.clear
							include components/navigation-mobile

				div#logo.text-center.flex-1.upspace-200

					h3.dust-grey-color.font-1-2 Flo Adventure Tours
					h1.font-3
						a.dust-grey-color(href="#top") Formular de inscriere
					case name
						when 'patru3'
							h3.dust-grey-color.font-2 4x4 in 3 zile
						when 'patru5'
							h3.dust-grey-color.font-2 4x4 in 5 zile
						when 'apuseni3'
							h3.dust-grey-color.font-2 Apuseni in 3 zile
						when 'apuseni5'
							h3.dust-grey-color.font-2 Apuseni in 5 zile
						when 'montblanc'
							h3.dust-grey-color.font-2 Mont Blanc
						when 'grossglockner'
							h3.dust-grey-color.font-2 Grossglockner
						when 'elbrus'
							h3.dust-grey-color.font-2 Elbrus
						when 'maroc'
							h3.dust-grey-color.font-2 Jebel Toubkal
						when 'everestbc'
							h3.dust-grey-color.font-2 Everest Base camp
						default
							h3



	//mesaje
	div.page-description.wrapper.dust-white.dark-grey-color
		div.container.clear(data-device="#{type}", style="align-items: flex-start;")
			h3.hide-me.orange-color(style=("#{sent}" === 'yes') ? "display: block;" : "display: none;") Mesajul tau a fost trimis. Iti vom raspunde in cel mai scurt timp posibil!
			h3.hide-me.orange-color(style=("#{bla}" === 'yes') ? "display: block;" : "display: none;") Ne pare rau, dar mesajul nu a fost trimit. Reincercati!

	//formular 4 x 4 in 3 zile
	if (name == 'patru3' || name == 'patru5')
		div.page-description.wrapper.dust-grey.dark-grey-color
			div.container.clear(data-device="#{type}", style="align-items: flex-start;")
				div.page-box.flex-2

					h3 #[a.dark-grey-color(href="tel:0040753012119") +40 (753) 012 119]
					h3 #[a.highlight(href='mailto:officefloadventure@gmail.com') officefloadventure @ gmail.com]
					div.heading-sep.light-grey

					p.font-open-sans Dupa completarea acestui formular vei fi contactat pentru confirmare si pentru plata avansului, care ti-l vom comunica in urma confirmarii. Pentru intrebari si nelamuriri, te rugam sa folosesti #[a.highlight(href="/contact") pagina de contact].

					form.dark-grey-color(action="/inscriere/#{name}", method="post")
						if (name == 'patru3')
							input(type="hidden", name="formular", value="Pentru 4x4 in 3 zile")
						if (name == 'patru5')
							input(type="hidden", name="formular", value="Pentru 4x4 in 5 zile")


						input#firstname(type="text", name="firstname", placeholder="Nume",required)
						input#secondname(type="text", name="secondname", placeholder="Prenume")
						input#address(type="text", name="email", placeholder="E-mail", required)
						input#phone(type="text", name="phone", placeholder="Telefon", required)
						input.btmspace-80(type="text", name="p_address", placeholder="Adresa completa", required)

						p.font-open-sans Te rugam sa completezi formularul cat mai complet posibil. Este foarte important sa stim ce echipament detii si care este starea ta de sanatate pentru a te bucura din plin de expeditia aleasa.

						input#phone(type="text", name="age", placeholder="Varsta", required)
						input#phone(type="text", name="occupation", placeholder="Ocupatia", required)
						textarea.btmspace-80(type="text", name="health", placeholder="Probleme de sanatate pe care le consideri a fi mentionate.")

						input#phone(type="text", name="car", placeholder="Detii o masina si vrei sa vii cu ea? Daca da, spune-ne ce model e.", required)

						textarea#body(type="text", name="experience", placeholder="Experiente anterioare in 4x4? ")
						textarea#body(type="text", name="tent", placeholder="Detii un cort?")
						textarea#body(type="text", name="family", placeholder="Vii cu familia? Sunteti insotiti de un copil cu varsta maxima de 15 ani?")



						button.orange trimite



	if(name == 'apuseni3' || name == 'apuseni5')
		div.page-description.wrapper.dust-grey.dark-grey-color
			div.container.clear(data-device="#{type}", style="align-items: flex-start;")
				div.page-box.flex-2

					h3 #[a.dark-grey-color(href="tel:0040753012119") +40 (753) 012 119]
					h3 #[a.highlight(href='mailto:officefloadventure@gmail.com') officefloadventure @ gmail.com]
					div.heading-sep.light-grey

					p.font-open-sans Dupa completarea acestui formular vei fi contactat pentru confirmare si pentru plata avansului, pe care ti-l vom comunica in urma confirmarii. Pentru intrebari si nelamuriri, te rugam sa folosesti #[a.highlight(href="/contact") pagina de contact].

					form.dark-grey-color(action="/inscriere/#{name}", method="post")
						if (name == 'apuseni3')
							input(type="hidden", name="formular", value="Pentru Apuseni in 3 zile")
						if (name == 'apuseni5')
							input(type="hidden", name="formular", value="Pentru Apuseni in 5 zile")


						input#firstname(type="text", name="firstname", placeholder="Nume",required)
						input#secondname(type="text", name="secondname", placeholder="Prenume")
						input#address(type="text", name="email", placeholder="E-mail", required)
						input#phone(type="text", name="phone", placeholder="Telefon", required)
						input.btmspace-80(type="text", name="p_address", placeholder="Adresa completa", required)

						p.font-open-sans Te rugam sa completezi formularul cat mai exact posibil. Este foarte important sa stim ce echipament detii si care este starea ta de sanatate pentru a te bucura din plin de expeditia aleasa.

						input#phone(type="text", name="age", placeholder="Varsta", required)
						input#phone(type="text", name="occupation", placeholder="Ocupatia", required)
						textarea(type="text", name="health", placeholder="Probleme de sanatate relevante.")

						textarea#body(type="text", name="tent", placeholder="Detii un cort sau preferi cabanuta cu priciuri?")


						button.orange trimite

	if (name == 'montblanc' || name == "grossglockner" | name == "elbrus" || name == "maroc" || name == "everestbc")
		div.page-description.wrapper.dust-grey.dark-grey-color
			div.container.clear(data-device="#{type}", style="align-items: flex-start;")
				div.page-box.flex-2

					h3 #[a.dark-grey-color(href="tel:0040753012119") +40 (753) 012 119]
					h3 #[a.highlight(href='mailto:officefloadventure@gmail.com') officefloadventure @ gmail.com]
					div.heading-sep.light-grey

					p.font-open-sans Dupa completarea acestui formular vei fi contactat pentru confirmare si pentru plata avansului, pe care ti-l vom comunica in urma confirmarii. Pentru intrebari si nelamuriri, te rugam sa folosesti #[a.highlight(href="/contact") pagina de contact].

					form.dark-grey-color(action="/inscriere/#{name}", method="post")

						if (name == 'grossglockner')
							input(type="hidden", name="formular", value="Pentru Grossglockner")
						if (name == 'montblanc')
							input(type="hidden", name="formular", value="Pentru Montblanc")
						if (name == 'elbrus')
							input(type="hidden", name="formular", value="Pentru Elbrus")
						if (name == 'maroc')
							input(type="hidden", name="formular", value="Pentru Maroc")
						if (name == 'everestbc')
							input(type="hidden", name="formular", value="Pentru Everest base camp")

						input#firstname(type="text", name="firstname", placeholder="Nume",required)
						input#secondname(type="text", name="secondname", placeholder="Prenume")
						input#address(type="text", name="email", placeholder="E-mail", required)
						input#phone(type="text", name="phone", placeholder="Telefon", required)
						input.btmspace-80(type="text", name="p_address", placeholder="Adresa completa", required)

						p.font-open-sans Te rugam sa completezi formularul cat mai exact posibil. Este foarte important sa stim ce echipament detii si care este starea ta de sanatate pentru a te bucura din plin de expeditia aleasa.

						input#phone(type="text", name="age", placeholder="Varsta")
						input#phone(type="text", name="occupation", placeholder="Ocupatia")
						textarea.btmspace-80(type="text", name="health", placeholder="Probleme de sanatate relevante.")

						if (name !== "maroc")
							p.font-open-sans Ce echipament tehnic detii?
							div.group(data-device="#{type}").max-width-60
								span.font-open-sans
									input#casca.checkbox(type='checkbox', name='casca', value= 'da')
									label(for='casca') Casca
								span.font-open-sans
									input#piolet.checkbox(type='checkbox', name='piolet', value= 'da')
									label(for='piolet') Piolet
								span.font-open-sans
									input#coltari.checkbox(type='checkbox', name='coltari' value= 'da')
									label(for='coltari') Coltari
								span.font-open-sans
									input#ham.checkbox(type='checkbox', name='ham', value= 'da')
									label(for='ham') Ham

						textarea#body(type="text", name="experience", placeholder="Experiente anterioare in ascensiuni? Daca da, unde? ")

						button.orange trimite

	div.repeat-ribbon.wrapper.coloured
		div.repeat(style="background-image: url('/images/repeat.png');height: 50px;background-size: contain;")

	//Logos and sponsors

	div.wrapper.coloured.orange
		div.hoc.clear
			figure#logos
				ul.nospace.group
					li
						a(href='#')
							img(src="/images/logo-tete.png")
					li
						a(href='#')
							img(src="/images/logo-free.png")
					li
						a(href='#')
							img(src="/images/logo-pro.png")
					li
						a(href='#')
							img(src="/images/logo-lowe.png")

